{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Author list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Institution</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('author_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.institution }}</td>
                <td>{{ entity.gender }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-default" href="{{ path('author_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-default" href="{{ path('author_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <ul>
            <li>
            <a class="btn btn-default" href="{{ path('author_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
