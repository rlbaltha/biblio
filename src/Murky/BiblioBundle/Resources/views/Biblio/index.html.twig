{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Biblio list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Pubinfo</th>
                <th>Fileformat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('biblio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.pubInfo|raw }}</td>
                <td>{{ entity.fileFormat }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-default" href="{{ path('biblio_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-default" href="{{ path('biblio_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <ul>
            <li>
            <a class="btn btn-default" href="{{ path('biblio_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
